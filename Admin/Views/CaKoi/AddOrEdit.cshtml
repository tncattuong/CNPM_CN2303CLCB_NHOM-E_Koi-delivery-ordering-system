
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <style>
        .form-group input,
        .form-group select {
            border: 1px solid orangered;
            border-radius: 5px;
            width: 100%;
        }

        .button-save {
            background-color: orangered;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 30px;
            font-size: 1.1rem;
            cursor: pointer;
            border: 2px solid #ff5722;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .button-save:hover {
            background-color: #ff5722;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <form method="post">
            <div class="form-group">
                <label for="MaCa">Mã Cá</label>
                <input asp-for="CaKoi.MaCa" class="form-control" />
                <span asp-validation-for="CaKoi.MaCa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="TenCa">Tên Cá</label>
                <input asp-for="CaKoi.TenCa" class="form-control" />
                <span asp-validation-for="CaKoi.TenCa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="LoaiCa">Loại Cá</label>
                <input asp-for="CaKoi.LoaiCa" class="form-control" />
                <span asp-validation-for="CaKoi.LoaiCa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="KichThuoc">Kích Thước (cm)</label>
                <input asp-for="CaKoi.KichThuoc" class="form-control" />
                <span asp-validation-for="CaKoi.KichThuoc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="TrongLuong">Trọng Lượng (kg)</label>
                <input asp-for="CaKoi.TrongLuong" class="form-control" />
                <span asp-validation-for="CaKoi.TrongLuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Tuoi">Tuổi</label>
                <input asp-for="CaKoi.Tuoi" class="form-control" />
                <span asp-validation-for="CaKoi.Tuoi" class="text-danger"></span>
            </div>

            <button type="submit" class="button-save">Lưu</button>
        </form>
    </div>
</body>
</html>
