

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <style>
        .btn-action {
            background-color: orangered;
            color: white;
        }

        .btn-action:hover {
            background-color: white;
            color: orangered;
            border: 2px solid #ff5722;
        }

        .table-responsive {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <p>Danh sách các chi tiết đơn hàng.</p>

        <a href="@Url.Page("/ChiTietDonHangAddOrEdit")" class="btn btn-success btn-sm">Thêm Mới</a>

        <div class="table-responsive mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã Chi Tiết</th>
                        <th>Mã Đơn Hàng</th>
                        <th>Mã Cá</th>
                        <th>Số Lượng</th>
                        <th>Giá Cá</th>
                        <th>Thành Tiền</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietDonHangs)
                    {
                        <tr>
                            <td>@item.MaChiTiet</td>
                            <td>@item.MaDonHang</td>
                            <td>@item.MaCa</td>
                            <td>@item.SoLuong</td>
                            <td>@item.Gia.ToString("N0") VND</td>
                            <td>@(item.SoLuong * item.Gia).ToString("N0") VND</td>
                            <td>
                                <a href="@Url.Page("/ChiTietDonHangAddOrEdit", new { id = item.MaChiTiet })" class="btn btn-warning btn-sm">Sửa</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.MaChiTiet" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
