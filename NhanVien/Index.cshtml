<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <a href="@Url.Page("/NhanVienAddOrEdit")" class="btn btn-success btn-sm">Thêm Mới</a>
        <div class="table-responsive mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã NV</th>
                        <th>Tên NV</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.NhanViens)
                    {
                        <tr>
                            <td>@item.MaNV</td>
                            <td>@item.TenNV</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Email</td>
                            <td>
                                <a href="@Url.Page("/NhanVienAddOrEdit", new { id = item.MaNV })" class="btn btn-warning btn-sm">Sửa</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.MaNV" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
