@using KDOS.Repository.Models
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        .form-group input,
        .form-group select {
            border: 1px solid orangered;
            border-radius: 5px;
            width: 100%;
        }

        .button-save {
            background-color: orangered;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 30px;
            font-size: 1.1rem;
            cursor: pointer;
            border: 2px solid #ff5722;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .button-save:hover {
            background-color: #ff5722;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <form method="post">
            <div class="form-group">
                <label for="MaKhach">Mã Khách Hàng</label>
                <input asp-for="KhachHang.MaKhach" class="form-control" />
                <span asp-validation-for="KhachHang.MaKhach" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="TenKhach">Tên Khách Hàng</label>
                <input asp-for="KhachHang.TenKhach" class="form-control" />
                <span asp-validation-for="KhachHang.TenKhach" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DiaChiKhach">Địa Chỉ</label>
                <input asp-for="KhachHang.DiaChiKhach" class="form-control" />
                <span asp-validation-for="KhachHang.DiaChiKhach" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SoDienThoai">Số Điện Thoại</label>
                <input asp-for="KhachHang.SoDienThoai" class="form-control" />
                <span asp-validation-for="KhachHang.SoDienThoai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="KhachHang.Email" class="form-control" />
                <span asp-validation-for="KhachHang.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="GioiTinh">Giới Tính</label>
                <select asp-for="KhachHang.GioiTinh" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="KhachHang.GioiTinh" class="text-danger"></span>
            </div>

            <button type="submit" class="button-save">Lưu</button>
        </form>
    </div>
</body>
</html>
