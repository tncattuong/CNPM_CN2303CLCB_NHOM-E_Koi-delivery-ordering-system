@using KDOS.Repository.Models
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        .form-group input,
        .form-group select {
            border: 1px solid orangered;
            border-radius: 5px;
            width: 100%;
        }

        .button-save {
            background-color: orangered;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 30px;
            font-size: 1.1rem;
            cursor: pointer;
            border: 2px solid #ff5722;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .button-save:hover {
            background-color: #ff5722;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>
        <form method="post">
            <div class="form-group">
                <label for="MaKhach">Mã Khách Hàng</label>
                <input asp-for="MaKhach" class="form-control" />
                <span asp-validation-for="MaKhach" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="MaDonHang">Mã Đơn Hàng</label>
                <input asp-for="MaDonHang" class="form-control" />
                <span asp-validation-for="MaDonHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NoiDung">Nội Dung Phản Hồi</label>
                <textarea asp-for="NoiDung" class="form-control"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NgayPhanHoi">Ngày Phản Hồi</label>
                <input asp-for="NgayPhanHoi" class="form-control" type="date" />
                <span asp-validation-for="NgayPhanHoi" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</body>
</html>